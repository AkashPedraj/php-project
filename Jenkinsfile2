pipeline {
    agent any

    parameters {
        choice(
            name: 'executeJob',
            choices: ['Yes', 'No'],
            description: 'Do you want to execute the deployment?'
        )
    }

    stages {

        stage('Git Clone') {
            steps {
                git url: 'https://github.com/AkashPedraj/php-project.git', branch: "master"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'sudo docker build -t akashdeveloper001/5sepimage:v1 .'
                    sh 'sudo docker images'
                }
            }
        }

        stage('Docker Login & Push') {
            when {
                expression { params.executeJob == 'Yes' }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-pwd', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh 'echo "$PASS" | sudo docker login -u "$USER" --password-stdin'
                    sh 'sudo docker push akashdeveloper001/5sepimage:v1'
                }
            }
        }

        stage('Deploy') {
            when {
                expression { params.executeJob == 'Yes' }
            }
            steps {
                script {
                    def dockerrm  = "sudo docker rm -f My-first-containe2211 || true"
                    def dockerCmd = "sudo docker run -itd --name My-first-containe2211 -p 8083:80 akashdeveloper001/5sepimage:v1"

                    sshagent(['sshkeypair']) {
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@172.31.23.156 '${dockerrm}'"
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@172.31.23.156 '${dockerCmd}'"
                    }
                }
            }
        }
    }
}
